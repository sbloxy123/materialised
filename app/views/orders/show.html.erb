      <div class="button-container">
        <div class="align-center mt-2"><button onClick="window.location.reload()" class="btn btn-warning button-shadow px-4 py-2" >Confirm choices</button></div>

        <button id="pay" class="btn btn-primary mt-4 mb-3 me-2 ms-4 btn-lg px-4 button-shadow">Pay</button>

              <script src="https://js.stripe.com/v3/"></script>
              <script>
                const paymentButton = document.getElementById('pay');
                paymentButton.addEventListener('click', () => {
                  const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
                  stripe.redirectToCheckout({
                    sessionId: '<%= @order.checkout_session_id %>'
                  });
                });
              </script>
      </div>
