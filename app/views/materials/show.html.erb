<div>
  <div class="flex-container-two margin-container-one-show">
    <div class="first-div-show">
      <h2><%= @material.name.capitalize %></h2>
    </div>

    <div class="second-div-show flex-container-one">
      <div class="image-show-div">
        <%= image_tag "samplematerial.jpg", class: "material-image" %>
      </div>

      <div class="details-div">
        <div class="details-again-div">
          
          <p><%= @material.description %>
          </p>
        </div>

        <div class="price-button-div">

          <div>
          <h2>Price:</h2>
          </div>

          <div>
            <form action="/" method="get">
              <button type="submit" class="orange-button">Buy</button>
            </form>
          </div>

        </div>
      </div>
    </div>

    <div class="third-div-show">
      <div>
        <h2>Suppliers: </h2>
        <h2>Vehicle-type required: </h2>
      </div>
    </div>

  </div>

  <div class="margin-container-two-show">

  </div>
</div>

<%= simple_form_for @basket do |f| %>
  <%= hidden_field_tag :material, @material.id %>
  <%= f.input :quantity, placeholder: "How many?" %>
  <%= f.submit class: "btn btn-flat" %>
<% end %>
