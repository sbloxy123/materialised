<div class="container mt-5">
  <%= form_with url: materials_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control me-3 search-color",
      placeholder: "Find materials"
    %>
    <%= submit_tag "Search", class: "btn orange-button" %>
  <% end %>
</div>

<div class="container mt-5 mb-5">
  <% if params[:query].present? %>
    <h2>Products searched for: "<%= params[:query] %>"</h2>
  <% end %>
</div>

<div class="container mt-5 mb-5" id="index-grid">
  <% @materials.each do |material| %>
    <div class="container card-border card-size">
      <div class="container d-flex gap-30 mt-5 pb-5 border-bottom mb-2">
        <%# <img src="https://images.unsplash.com/photo-1538474705339-e87de81450e8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" alt="" id="img-test"> %>
        <%= image_tag "#{material.image}", class: "img-test" %>
        <div class="name-des">
          <h5><%= "#{material.name}" %></h5>
          <p><%= "#{material.description}" %></p>
        </div>
      </div>
      <div class="d-flex space-between">
        <div>
        <%# <p class="mt-2">Input for quantity</p> %>
        <p class="mt-2"></p>
        <p class="fs-5"><i class="fa-solid fa-truck-front"></i> Truck available</p>
        </div>
        <div>
          <p class="mt-2 fs-5 text-align-right"><%= humanized_money_with_symbol(material.price) %></p>
          <p><%= link_to "View details", material_path(material), class: "btn view-details" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
