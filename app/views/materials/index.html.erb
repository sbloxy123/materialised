<div class="container mt-5">
  <%= form_with url: materials_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control me-5 search-color",
      placeholder: "Find materials"
    %>
    <%= submit_tag "Search", class: "btn orange-button" %>
  <% end %>
</div>

<div class="container mt-5 mb-5">
  <% if params[:query].present? %>
    <h2>Products searched for: "<%= params[:query] %>"</h2>
  <% end %>
</div>

<div class="container mt-5" id="index-grid">
  <% @materials.each do |material| %>
    <div class="container card-border">
      <div class="container d-flex gap-30 mt-5 pb-5 border-bottom">
        <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80" alt="" id="img-test">
        <div class="name-des">
          <h5><%= "#{material.name}" %></h5>
          <p><%= "#{material.description}" %></p>
        </div>
      </div>
      <div class="d-flex space-between">
        <div>
        <p class="mt-2">Input for quantity</p>
        <p>Vehicle image and type</p>
        </div>
        <div>
          <p class="mt-2"><%= "#{material.price}" %></p>
          <%= link_to "View details", material_path(material) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
